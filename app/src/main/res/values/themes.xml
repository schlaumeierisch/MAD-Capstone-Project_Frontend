<resources>
    <!-- Base application theme. -->
    <style name="Theme.VocabilityFrontend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeAccent</item>
        <item name="colorPrimaryVariant">@color/lightOrangeAccent</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowAccent</item>
        <item name="colorSecondaryVariant">@color/lightYellowAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- font -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- title for screen -->
    <style name="screen_title">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- title for form -->
    <style name="form_attribute_title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- bottom navigation menu -->
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/roboto_black</item>
    </style>


    <!-- subtitles -->
    <style name="subtitle_bold">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- buttons -->
    <style name="default_button_form" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="button_long_add" parent="default_button_form">
        <item name="backgroundTint">@color/orangeAccent</item>
    </style>

    <style name="button_long_delete" parent="default_button_form">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="button_small_confirm" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="button_small_cancel" parent="button_small_confirm">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/orangeAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/orangeAccent</item>
        <item name="drawableTint">@color/orangeAccent</item>
        <item name="android:textColor">@color/orangeAccent</item>
    </style>

    <style name="button_big" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orangeAccent</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="icon_button" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <!-- confirmation dialog -->
    <style name="confirmation_dialog_title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="confirmation_dialog_message">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>